# Unity YAML files
[*.{asset,meta,prefab,unity}]
indent_size = 2
trim_trailing_whitespace = false

[*.csproj]
indent_size = 2

[*.sln]
indent_style = tab

# Unity JSON files using 4-space indents
[{*.buildconfiguration,ProjectSettings/XRSettings.asset}]
indent_size = 4
trim_trailing_whitespace = true

# Unity JSON files using 2-space indents
[{Packages,ProjectSettings}/*.json]
indent_size = 2
